        }
        if (title === 'Blogs Page') {
            blogs.classList.add("active");
            return;
        }
        if (title === 'Videos Page') {
            news.classList.add("active");
            return;
        }
        if (title === 'Reviews Page') {
            reviews.classList.add("active");
            return;
        }
        if (title === 'About Page') {
            about.classList.add("active");
            return;
        }
        if (title === 'Login Page') {
            login.classList.add("active");
            return;
        }
        if (title === 'Signup Page') {
            signup.classList.add("active");
            return;
        }
    }

stylePageLink()

</script>

<!-- user login script and dynamic stylings -->

<script>
    const userBox = document.querySelector('#user-box');
    const userBoxCaret = document.querySelector('#login-div #user-box i.fa-caret-down');
    const userBoxList = document.querySelector('#login-div #user-box-list');
    const userBoxListOpts = document.querySelector('#login-div #user-box-list li');

    if (userBox) {
        userBox.addEventListener('click', (e) => {
            userBoxCaret.classList.toggle('drop');
            userBoxList.classList.toggle('reveal');
        })

        userBoxListOpts.addEventListener('click', (e) => {
            userBoxList.classList.toggle('reveal');
        })
    }
</script>

<!--  responsive navigation menu script-->
<script>
    const mainContainer = document.querySelector("body")
    const menuBtn = document.querySelector("#menu-btn-icon")
    const menuBtnIcon = document.querySelector(".resp-menu")
    const respMenu = document.querySelector("header nav")

    let bool = true;

    menuBtn.addEventListener("click", () => {
        respMenu.classList.toggle("open")
        menuBtnIcon.classList.replace("fa-bars", "fa-times")
        bool ? mainContainer.style.overflowY = "hidden" : mainContainer.style.overflowY = "scroll"
        if (bool) {
            menuBtnIcon.classList.replace("fa-bars", "fa-times")
            menuBtnIcon.nextElementSibling.innerText = "Close Menu"
        } else {
            menuBtnIcon.classList.replace("fa-times", "fa-bars")
            menuBtnIcon.nextElementSibling.innerText = "Menu"
        }  
        bool = !bool
    })
</script>

